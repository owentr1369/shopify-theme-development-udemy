<div class="max-w-md text-center">
  <div class="text-5xl font-bold my-4">
    {{ section.settings.title }}
  </div>
  <div class="my-4">
    <p class="text-base md:text-xl leading-normal">
      {{ section.settings.subtext_html }}
    </p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a
      href="{{shop_url}}"
      class="px-6 py-3 bg-black text-white rounded-lg"
    >
      {{- section.settings.button_label -}}
    </a>
  </div>
</div>
{% schema %}
{
  "name": "Template 404",
  "tag": "section",
  "class": "flex flex-col items-center justify-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "404"
    },
    {
      "type": "richtext",
      "id": "subtext_html",
      "label": "Subtext",
      "default": "<p>Sorry, the page you are looking for does not exist.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Go to home page"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/"
    }
  ]
}
{% endschema %}
