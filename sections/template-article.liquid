<article class="max-w-6xl mx-auto p-4">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}
        <h1 class="text-4xl font-bold mb-4 text-center">{{ article.title }}</h1>
      {% when 'article_author' %}
        {% if section.settings.enable_author %}
          <small class="text-gray-600 text-center block">{{ article.author }}</small>
        {% endif %}
      {% when 'article_date' %}
        {% if section.settings.enable_date %}
          <div class="text-gray-500 text-sm text-center">
            <time datetime="{{ article.date }}">{{ article.date }}</time>
          </div>
        {% endif %}
      {% when 'article_image' %}
        <img
          class="w-full h-auto rounded-lg shadow-md mb-4"
          src="{{article.image | img_url: 'medium' }}"
          alt="{{article.title}}"
          loading="lazy"
          width="{{ article.image.width }}"
          height="{{ article.image.height }}"
        >
      {% when 'article_content' %}
        <div class="prose max-w-none p-4">
          {{ article.content }}
        </div>
      {% else %}

    {% endcase %}
  {% endfor %}
</article>

{% schema %}
{
  "name": "Template Article",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_author",
      "label": "Show author name",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_date",
      "label": "Show date",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "article_title",
      "name": "Article Title",
      "limit": 1
    },
    {
      "type": "article_author",
      "name": "Article Author",
      "limit": 1
    },
    {
      "type": "article_date",
      "name": "Article Date",
      "limit": 1
    },
    {
      "type": "article_image",
      "name": "Article Image",
      "limit": 1
    },
    {
      "type": "article_content",
      "name": "Article Content",
      "limit": 2
    }
  ]
}
{% endschema %}
